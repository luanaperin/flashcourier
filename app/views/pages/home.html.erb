<%= render "shared/navbar" %>

<div class="banner">
  <div class="banner-content">
    <img src="https://www.google.com.br/inbox/assets/images/intro/intro-logo.png" height="160" width="160">
    <h1>Inbox</h1>
    <p>By Gmail</p>
    <p>The inbox that works for you<p>
    <div class="container">
      <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">GET INBOX</button><br>
    <!-- Modal -->
      <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-body">
              <p>Android | IOS | Web.</p>
            </div>
          </div>
        </div>
      </div>
      <a href="#"  data-toggle="modal" data-target="#videoModal" data-theVideo="http://www.youtube.com/embed/loFtozxZG0s">Watch the video</a>
      <div class="modal fade" id="videoModal" tabindex="-1" role="dialog" aria-labelledby="videoModal" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-body">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <div>
                <iframe width="100%" height="350" src="http://res.cloudinary.com/dpg1ipkol/image/upload/v1505321319/intro-product_ofzcqw.png"></iframe>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="content-inner">
    <img alt class="has-retina" src=""
  </div>
</div>
